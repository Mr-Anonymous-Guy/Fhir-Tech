# ===========================================
# NAMASTE-SYNC Backend Environment Configuration
# ===========================================
# Copy this file to .env and update values

# Server Configuration
NODE_ENV=development
PORT=3001
HOST=0.0.0.0

# Database Configuration
MONGODB_URI=mongodb://localhost:27017
MONGODB_DB_NAME=namaste-sync
MONGODB_OPTIONS=retryWrites=true&w=majority&maxPoolSize=10

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=500

# ABHA Integration Configuration
ABHA_BASE_URL=https://dev.abdm.gov.in/api/v1
ABHA_CLIENT_ID=your_abha_client_id
ABHA_CLIENT_SECRET=your_abha_client_secret

# ICD-11 Integration Configuration
ICD11_API_URL=https://id.who.int/icd/entity
ICD11_CLIENT_ID=your_icd11_client_id
ICD11_CLIENT_SECRET=your_icd11_client_secret

# Logging & Security Configuration
# ALLOWED_ORIGINS=https://yourdomain.com
# LOG_LEVEL=warn
# RATE_LIMIT_MAX_REQUESTS=1000